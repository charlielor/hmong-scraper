extends layout

block content
  div(class="container")
    div(class="jumbotron")
      h1(class="text-center") Hmong Site Scraper
      unless numOfLinks === 0
        p(class="text-center") Scraped #{numOfLinks} site(s) for #{numOfWords} word(s)
    div(class="row")
      div(class="col-md-offset-3 col-md-6")
        form(name="scrape", action="/links", method="post" class="form-horizontal")
          div(class="form-group")
            label(for="link" class="col-md-4 control-label") Link:
            div(class="col-md-8")
              input(id="link" class="form-control" type="text", name="link")
          div(class="form-group")
            label(for="class" class="col-md-4 control-label") .class (to scrape):
            div(class="col-md-8")
              input(id="class" class="form-control" type="text", name="_class")
          button(type="submit" class="btn btn-default pull-right") Submit
    div(class="row")
      div(class="col-md-12")
        div(id="results")
